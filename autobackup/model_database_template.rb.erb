# encoding: utf-8
 require 'yaml'
Backup::Model.new(:<%= app_name %>_database, "Backup of <%= app_name %>'s database") do

  <% if database == 'mysql' %>
    dbconfig = YAML::load(ERB.new(IO.read(File.join('/opt','<%=app_name%>','shared', 'config', 'database.yml'))).result)['production']
    database MySQL do |db|
      db.name               = dbconfig['database']
    end
  <% elsif database == 'postgresql' %>
    dbconfig = YAML::load(ERB.new(IO.read(File.join('/opt','<%=app_name%>', 'shared', 'config', 'database.yml'))).result)['production']
    database PostgreSQL do |db|
      db.name               = dbconfig['database']
    end
  <% elsif database == 'mongodb'%>
    dbconfig = YAML::load(ERB.new(IO.read(File.join('/opt','<%=app_name%>','config', 'mongoid.yml'))).result)['production']
    database MongoDB do |db|
      db.name = dbconfig['database']
    end
  <%end%>

  store_with S3 do |s3|
    s3.path              = "/<%= app_name %>"
  end

  compress_with Gzip

  notify_by Mail

end
